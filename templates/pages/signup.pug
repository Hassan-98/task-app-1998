   body
      
      //- Navbar
      include ../components/navbar.pug
      .header.noAuth 
         .overlay
            .container
               .loginBox
                  h1 SIGNUP
                  if error
                     p.alert.alert-danger.error=error
                  form(action="/users", method="POST")
                     label Username
                     input.form-control(type="text", placeholder="Username", name="username")
                     label Phone Number
                     input.form-control(type="number", placeholder="Phone Number", name="phone")
                     label Age
                     input.form-control(type="number", placeholder="Age", name="age")
                     label Email Address
                     input.form-control(type="email", placeholder="Email Address", name="email")
                     label Password
                     input.form-control(type="password", placeholder="Password", name="password")
                     label Confirm Password
                     input.form-control(type="password", placeholder="Confirm Password", name="confirm password")
                     button(type="submit") Signup
                     p Do you have account? #[a(href="/login") Login]

      <!-- JQuery Library v(3.4.1) -->
      script(src="js/jquery-3.4.1.min.js")
      <!-- Popper JS -->
      script(src="js/popper.min.js")
      <!-- Bootstrap JS v(4.2.1) -->
      script(src="js/bootstrap.min.js")
